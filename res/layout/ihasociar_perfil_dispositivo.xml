<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridView
        android:id="@+id/gdDispositivosAsociados"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="21dp"
        android:numColumns="3" >
    </GridView>

    <GridView
        android:id="@+id/gdDispositivosDisponibles"
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/gdDispositivosAsociados"
        android:layout_marginLeft="29dp"
        android:numColumns="3" >
    </GridView>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/gdDispositivosDisponibles"
        android:layout_below="@+id/gdDispositivosDisponibles"
        android:layout_marginRight="33dp"
        android:layout_marginTop="23dp"
        android:text="Regresar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gdDispositivosDisponibles"
        android:layout_alignLeft="@+id/gdDispositivosDisponibles"
        android:layout_marginBottom="29dp"
        android:text="Dispositivos Asociados"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/gdDispositivosAsociados"
        android:text="Dispositivos Disponibles"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/gdDispositivosAsociados"
        android:text="Registrar Dispositivos" />

</RelativeLayout>